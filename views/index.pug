extends layout

block content
  .container 
    h1.text-center All Polls
    .row
      each poll in polls
        .col-md-4.text-center
          .panel.panel-default
            .panel-heading
              a(href='/poll?pollid='+poll.id)= poll.name
            .panel-body
              p Total votes:&nbsp;
                =poll.totalVotes